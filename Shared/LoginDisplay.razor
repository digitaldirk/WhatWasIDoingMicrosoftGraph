<AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.body1">Hello, @context.User.Identity?.Name! </MudText>
        <MudLink Href="MicrosoftIdentity/Account/SignOut" Color="Color.Dark">Log out</MudLink>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="MicrosoftIdentity/Account/SignIn" Color="Color.Dark">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>
